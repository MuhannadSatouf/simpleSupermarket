@model List<Category>

@section title{
    <h1>Categories</h1>
    }


@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.CategoryName</td>
                    <td>@category.CategoryDescription</td>
                    <td>
                        <a class="btn btn-link" asp-controller="categories" asp-action="edit" asp-route-id ="@category.CategoryId">Edit</a>
                    </td>

                    <td>
                        <a class="btn btn-link" asp-controller="categories" asp-action="Delete" asp-route-categoryId="@category.CategoryId" onclick="return confirmationDelete()">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

  <a class="btn btn-primary" asp-action="Add" asp-controller="categories" > Add</a>
}

@section Scripts{
    <script>

        function confirmationDelete() {
            return confirm("Are you sure you want to delete this cateory?")
        }
    </script>
}