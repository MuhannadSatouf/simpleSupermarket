@model Category
@{
    var action = ViewBag.Action ?? string.Empty;
}
<form method="post" asp-action="@action" asp-controller="categories">

    @if (action.ToLower() == "edit")
    {
        <input type="hidden" asp-for="CategoryId" />
    }

    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="row mb-3">
        <div class="col-3">
            <label asp-for="CategoryName" class="col-form-label"></label>
        </div>
        <div class="col-4">
            <input type="text" asp-for="CategoryName" class="form-control" />
        </div>
        <div class="col">
            <span class="text-danger" asp-validation-for="CategoryName"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-3">
            <label asp-for="CategoryDescription" class="col-form-label"></label>
        </div>
        <div class="col-4">
            <input type="text" asp-for="CategoryDescription" class="form-control" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-2">
            <input type="submit" class="btn btn-primary" value="save" />
        </div>
        <div class="col-6">
        </div>
    </div>
</form>